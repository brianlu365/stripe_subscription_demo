<h2>Publication</h2>

<% @publications.each do |p| %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= p.title  %></h3>
    </div>
    <div class="panel-body">
      <p><%= p.description %></p>
      <p><%= p.file_url %></p>
    </div>
    <div class="panel-footer">
      <%= link_to "View more details", publication_path(p), class: 'btn btn-default' %>
      <% if current_user.is_admin %>
        <%= link_to "Edit", edit_admin_publication_path(p), class: 'btn btn-default' %>
      <% end %>
    </div>
  </div>
<% end %>